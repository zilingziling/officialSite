@import "global.styl"
@import "header.styl"
@import "footer.styl"
.newsBanner
  width: 100%;
  height: 100vh;
  position: relative;
  text-align: center;
  border-color: #666;
  background-image: url("../images/news_banner.png");
  background-size: cover;
  background-attachment: fixed;
  background-position: center;
  margin-bottom rem(70)
  .bannerC
    display inline-block
    position absolute
    top 38%
    margin auto
    left: 0
    right: 0
    font-size: rem(14)
    color: #fff
    width: rem(768)
    >p
      font-size:rem(32);
      font-family:MicrosoftYaHei;
      font-weight:400;
      color:rgba(255,255,255,1);
      margin-bottom: rem(30)
    .sign
      word-wrap: break-word;
      min-height: rem(24);
      margin-bottom: rem(40)
      h1
        font-size:rem(68);
        font-family:MicrosoftYaHei-Bold;
        font-weight:bold;
        color:rgba(255,255,255,1);
      p
        font-size:rem(20);
        font-family:MicrosoftYaHei;
        font-weight:400;
        color:rgba(255,255,255,1);
        line-height:rem(38);
    .learnMore
      font-size rem(24)
      color #fff
      width:rem(188);
      height:62px;
      border:2px solid rgba(255,255,255,1);
      border-radius:10px;
      margin auto
      text-align: center
      transition background .45s cubic-bezier(.215, .61, .355, 1),box-shadow .45s cubic-bezier(.215, .61, .355, 1),-webkit-box-shadow .45s cubic-bezier(.215, .61, .355, 1)
      cursor pointer
      &:hover
        box-shadow: 0 0 10px rgba(50,250,255,0.75);
      a
        font-size:rem(16);
        font-family:MicrosoftYaHei;
        font-weight:400;
        color:rgba(254,254,254,1);
        line-height:rem(62);
        text-decoration none
  .arrow
    position absolute
    bottom: 10%
    left: 0
    right: 0
    margin auto
    transform translate(0px,-20px)
    img[alt="sign"]
      width: rem(38)
      height: rem(22)