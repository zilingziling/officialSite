@import './global.styl';
@import './header.styl';
@import "footer.styl"
 $vw_fontsize=108; // iPhone 6尺寸的根元素大小基准值
 rem($px)
    ($px / $vw_fontsize) * 1rem;

$vw_design=1920;
html {
  font-size: ($vw_fontsize / ($vw_design / 2)) * 100vw;
  padding: 0;
  margin: 0;
  @media screen and (min-width: 1200px) {
    font-size: 108px;
  }
}
body{
  padding: 0;
  margin: 0;
}
.banner
  width: 100%;
  height: 100vh;
  position: relative;
  text-align: center;
  border-color: #666;
  background-image: url("../images/banner.png");
  background-size: cover;
  background-attachment: fixed;
  background-position: center;
  .bannerC
    display inline-block
    position absolute
    top 20%
    margin auto
    left: 0
    right: 0
    font-size: rem(14)
    color: #fff
    width: rem(550)
    img[alt="bannerLogo"]
      width: rem(350);
      min-height: rem(60);
      margin: auto;
      display: inline-block;
      font-size: rem(40);
      position: relative;
    .sign
      word-wrap: break-word;
      min-height: rem(24);
      margin-bottom: rem(30)
      h1
        font-size:rem(28);
        font-family:MicrosoftYaHei-Bold;
        font-weight:bold;
        color:rgba(254,254,254,1);
        line-height:rem(38);
      p
        font-size:rem(16);
        font-family:MicrosoftYaHei;
        font-weight:400;
        color:rgba(254,254,254,1);
        line-height:rem(38);
    .learnMore
      font-size rem(24)
      color #fff
      width:rem(188);
      height:62px;
      border:2px solid rgba(255,255,255,1);
      border-radius:10px;
      margin auto
      text-align: center
      transition background .45s cubic-bezier(.215, .61, .355, 1),box-shadow .45s cubic-bezier(.215, .61, .355, 1),-webkit-box-shadow .45s cubic-bezier(.215, .61, .355, 1)
      cursor pointer
      &:hover
        box-shadow: 0 0 10px rgba(50,250,255,0.75);
      span
        font-size:rem(16);
        font-family:MicrosoftYaHei;
        font-weight:400;
        color:rgba(254,254,254,1);
        line-height:rem(62);
  .arrow
    position absolute
    bottom: rem(20)
    left: 0
    right: 0
    margin auto
    transform translate(0px,-20px)
    img[alt="sign"]
      width: rem(38)
      height: rem(22)
