@import "global.styl"
@import "header.styl";
@import "footer.styl"

.aboutBan
  width: 100%;
  height: 100vh;
  position: relative;
  text-align: center;
  border-color: #666;
  background-image: url("../images/about_banner.png");
  background-size: cover;
  background-attachment: fixed;
  background-position: center;
  .bannerC
    display inline-block
    position absolute
    top 40%
    margin auto
    left: 0
    right: 0
    font-size: rem(14)
    color: #fff
    width: rem(1037)
    .sign
      word-wrap: break-word;
      min-height: rem(24);
      margin-bottom: rem(30)
      h1
        font-size:rem(68);
        font-weight:bold;
        color:rgba(255,255,255,1);
        text-shadow:0px 3px 10px rgba(82,82,82,0.25);
        margin-bottom: rem(20)

      p
        font-size:rem(18);
        font-family:MicrosoftYaHei;
        font-weight:400;
        color:rgba(254,254,254,1);
        line-height:rem(38);
        text-shadow:0px 3px 10px rgba(82,82,82,0.25);
        margin-bottom: rem(40)
      span
        font-size:rem(18);
        font-family:MicrosoftYaHei;
        font-weight:400;
        color:rgba(254,254,254,1);
        text-shadow:0px 3px 10px rgba(82,82,82,0.25);
        letter-spacing rem(4)
  .arrow
    position absolute
    bottom: 4%
    left: 0
    right: 0
    margin auto
    transform translate(0px,-20px)
    img[alt="sign"]
      width: rem(38)
      height: rem(22)
